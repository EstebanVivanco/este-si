<html>
	<head>
	<title>Registro de usuario</title>
	<link rel="stylesheet" href="custom.css">
	</head>
	<body style="padding: 10px;">

        <H3>Listado de Usuarios</H3>

        <table class="table table-hover">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Local</th>
                    <th>Fecha</th>
                    <th>Valor</th>
                    <th>Descripci√≥n</th>
                    <th>Imagen</th>
                    <th>Tipo</th>
                    <th>Solicitante</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                    <% results.forEach((event) => { %>
                  <tr>
                    <td>
                        <%= event.IdEvent %>
                    </td>
                    <td>
                        <%= event.Name %>
                    </td>
                    <td>
                        <%= event.LocationName %>
                    </td>

                    <td>
                        <%= event.Date %>
                    </td>
               
                    <td>
                        <%= event.Price %>
                    </td>
                    
                    <td>
                        <%= event.Description %>
                    </td>
                    
                    <td>
                        <img src="uploads/<%= event.Image %>" class="card-img-top"  style="width: 50%; height: 50%;" id="imgcard" alt="A Street in Europe">
                    </td>
                    
                    <td>
                        <%= event.Tipo %>
                    </td>
                    
                    <td>
                        <%= event.Solicitante %>
                    </td>
                    
                    <td>
                        <%= event.Estado %>
                    </td>

                    <td>
                        <a href="eventDesicion/<%= event.IdEvent %>" class="btn btn-outline-info"> Revisar Evento </a>
                    </td>

                <% }) %>

                  </tr>
                </tbody>
              </table>
          </table>


	  
	  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	</body>
<html>



      <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card border-secondary">
                <div class="card-header">Nuevo Registro</div>
                <div class="card-body">
                    <form action="/saveevent" method="POST" enctype="multipart/form-data">
                        
                        
                            <input style="display: none;" value="<%= user %>" type="text" id="iduser" name="iduser" tabindex="1">

                        <div class="mb-3">
                            <label for="events" class="form-label">Nombre Evento</label>
                            <input class="form-control" type="text" id="name" name="name" tabindex="1">
                        </div>

                        <div class="mb-3">
                            <label for="events" class="form-label">Nombre del Recinto </label>
                            <input class="form-control" type="text" id="locationname" name="locationname" tabindex="1">
                        </div>

                        <div class="mb-3">
                            <label for="events" class="form-label">Fecha</label>
                            <input class="form-control" type="date"  id="date" name="date" tabindex="1">
                        </div>
                        
                        <div class="mb-3">
                          <label for="events" class="form-label">Valor de Entrada</label>
                          <input class="form-control" type="number" id="price" name="price" tabindex="1">
                      </div>

                        <div class="mb-3">
                            <label for="events" class="form-label">Descripción</label>
                            <input class="form-control" type="text" id="description" name="description" tabindex="1">
                        </div>
                         
                        <div class="mb-3">
                          <label for="events" class="form-label">Categoría</label>

                          <select class="form-select" id="typeid" name="typeid" aria-label="Defaul selext example">
                          <% results.forEach((results) => { %>
                            <option value="<%= results.IdEventType %>"> <%= results.Name %> </option>
                            <% }) %>
                        </div>

                        </select>


                        <div class="mb-3">
                            <label for="events" class="form-label">Imagen</label>
                            <input class="form-control" type="file" id="image" name="image" tabindex="1">
                        </div>   

                        <div class="mb-3" id="map"></div>
                        <input id="Coordlat" name="Coordlat" ></input>
                        <input id="Coordlng" name="Coordlng"></input>
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                        
                        <div class="mb-3">
                        </div>
                        
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              
              
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js" integrity="sha256-o9N1jGDZrf5tS+Ft4gbIK7mYMipq9lqpVJ91xHSyKhg=" crossorigin=""></script>
    <script src="js/main.js"></script>
    <script src="js/validations.js"></script>
 
 
    </body>
</html>
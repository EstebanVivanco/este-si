        <H3>Mis Eventos</H3>

        <table class="table table-hover">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Local</th>
                    <th>Fecha</th>
                    <th>Valor</th>
                    <th>Descripci√≥n</th>
                    <th>Imagen</th>
                    <th>Tipo</th>
                    <th>Solicitante</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                    <% results.forEach((event) => { %>

                    
                        <tr>
                    <td >
                        <input style="display: none;" type="text" value="<%= event.IdEvent %>" id="id" name="id">
                        <%= event.IdEvent %>
                    </td>
                    <td>
                        <%= event.Name %>
                    </td>
                    <td>
                        <%= event.LocationName %>
                    </td>

                    <td>
                        <%= event.Date %>
                    </td>
               
                    <td>
                        <%= event.Price %>
                    </td>
                    
                    <td>
                        <%= event.Description %>
                    </td>
                    
                    <td>
                        <img src="uploads/<%= event.Image %>" class="card-img-top"  style="width: 50%; height: 50%;" id="imgcard" alt="A Street in Europe">
                    </td>
                    
                    <td>
                        <%= event.Tipo %>
                    </td>
                    
                    <td>
                        <%= event.Solicitante %>
                    </td>
                    
                    <td>
                        <%= event.Estado %>
                    </td>

                    <td>
                        <% if(event.Estado == 'Pendiente de pago'){ %>
                        <a href="payment/<%= event.IdEvent %>" class="btn btn-success"> Pagar Evento </a>
                        <%}%>

                        <% if(event.Estado == 'Pendiente de cambios'){ %>
                            <a href="eventadmin/<%= event.IdEvent %>" class="btn btn-outline-warning"> Editar Evento </a>
                        <%}%>
                    </td>

                <% }) %>

                  </tr>
                </tbody>
              </table>
          </table>


	  

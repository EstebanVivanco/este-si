<html>
	<head>
	<title>Registro de usuario</title>
	<link rel="stylesheet" href="custom.css">
	</head>
	<body style="padding: 10px;">

        <H3>Listado de Usuarios</H3>

        <form action="/useradminsearch">
            <div class="container">
                <div class="row mb-3">
                    <div class="col-md-10">
                        <input class="form-control" type="text" placeholder="Buscar usuario" id="names" name="names">
                    </div>
                    <div class="col-md-2">
                        <button style="width: 100%;" class="btn btn-primary  rounded-0 btn-block text-white" type="submit">BUSCAR</button>
                    </div>
    
                </div>
            </div>
        </form>
        <div class="container">
            <div class="row mb-3">
                <div class="col-md-3">
                    <form action="/useradmini">
                            <input type="text" value="1" style="display: none;" id="idadm" name="idadm">
                            <button style="width: 100%;" class="btn btn-primary  rounded-0 btn-block text-white" type="submit"" >ADMINISTRADORES</button>
                        </form>
                    </div>
                    <div class="col-md-3">
                    <form action="/useradmini">
                            <input type="text" value="2" style="display: none;" id="idadm" name="idadm">
                            <button style="width: 100%;" class="btn btn-primary  rounded-0 btn-block text-white" type="submit"" >USUARIOS</button>
                        </form>
                    </div>
                    <div class="col-md-3">
                        <form action="/useradmini">
                            <input type="text" value="3" style="display: none;" id="idadm" name="idadm">
                            <button style="width: 100%;" class="btn btn-primary  rounded-0 btn-block text-white" type="submit"" >INHABILITADOS</button>
                        </form>
                    </div>
                    <div class="col-md-3">
                    <form action="/useradmini">
                            <input type="text" value="3" style="display: none;" id="idadm" name="idadm">
                            <a style="width: 100%;" class="btn btn-primary  rounded-0 btn-block text-white" type="button" href="/useradmin">TODOS</a>
                        </form>
                    </div>
                    
                </div>
            </div>


        <table class="table table-hover">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>RUT</th>
                    <th>TELEFONO</th>
                    <th>USUARIO</th>
                    <th>ACCIONES</th>
                  </tr>
                </thead>
                <tbody>
                    <% results.forEach((user) => { %>
                  <tr>
                    <td>
                        <%= user.IdUser %>
                    </td>
                    <td>
                        <%= user.Name %>
                    </td>
                    <td>
                        <%= user.Surname %>
                    </td>

                    <td>
                        <%= user.Email %>
                    </td>
               
                    <td>
                        <%= user.Rut %>
                    </td>

                    <td>
                        <%= user.Phone %>
                    </td>
                    
                    <td>
                        <% if(user.UserLevelId == 1){ %>
                            Administrador
                        <%}%>

                        <% if(user.UserLevelId == 2){ %>
                            Usuario
                        <%}%>

                        <% if(user.UserLevelId == 3){ %>
                            Inhabilitado
                        <%}%>
                    </td>

                    <td>
                        <a href="/useredit/<%= user.IdUser %>" class="btn btn-outline-info"> editar </a>
                        <a href="/inhabilitaruser/<%= user.IdUser %>" class="btn btn-outline-danger"> borrar </a>
                    </td>


                <% }) %>

                  </tr>
                </tbody>
              </table>
          </table>


	  
	  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	</body>
<html>
<% if(eventini){ %>
<div class="container-fluid">
    <div class="row">
        <main class="col-12">
            <div class="card mb-3 mt-2" id="cardwide">
                <center>
                    <img src="/uploads/<%=eventini.Image%>" class="card-img-top" id="cardfull" alt="...">
                </center>
                <div class="card-body">
                    <h3 class="card-title"><%= eventini.NameV %></h3>
                    <h6 class="card-text">Ubicación del evento: <%= eventini.Locationname %></h6>
                    <h2 class="card-title"><%= eventini.Name %></h2>
                    <p class="card-text"><%= eventini.Description %></p>
                    <% if(eventini.Price == 0 ) {%>
                        <p class="card-text">Valor de entrada: Gratis</p>
                    <%}%>

                    <% if(eventini.Price != 0 ) {%>
                        <p class="card-text">Valor entrada : $<%= event.Price %></p>
                    <%}%>
                        <p class="card-text"><small class="text-muted"><%= eventini.Date %></small></p>
                        <h3 class="card-title">UBICACIÓN</h3>

                        <div class="mb-3"  id="map"></div>
                    </div>
                </div>

            </main>
        </div>
        <input type="text" id="lat" name="Coordlati" value="<%= eventini.CoordLat %>">
        <input type="text" id="lng" name="Coordlngi" value="<%= eventini.CoordLng %>"    >

        <% }%>

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Editar Usuario</title>
  </head>
  <body>

<h1>Editar Usuario</h1>

<% if(user){ %>

    <div class="container mt-4">
      <div class="card border-secondary">
          <div class="card border-secondary">
              <div class="card-header">Editar</div>
              <div class="card-body">
                  <form action="/updateuser" method="POST">


                    <div class="mb-3" style="display: none;">
                        <label for="user" class="form-label">ID</label>
                        <input class="form-control" type="text" value="<%=user.IdUser%>" id="iduser" name="iduser" tabindex="1">
                    </div>  


                      <div class="mb-3">
                          <label for="user" class="form-label">Nombre</label>
                          <input class="form-control" type="text" value="<%=user.Name%>" id="name" name="name" tabindex="1">
                      </div>

                    <div class="mb-3">
                          <label for="user" class="form-label">Apellido</label>
                          <input class="form-control" type="text" value="<%=user.Surname%>" id="surname" name="surname" tabindex="1">
                      </div>

                      
                    <div class="mb-3">
                        <label for="user" class="form-label">Email</label>
                        <input class="form-control" type="text" value="<%=user.Email%>" id="email" name="email" tabindex="1">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">Contrase√±a</label>
                        <input class="form-control" type="text" value="<%=user.password%>" id="password" name="password" tabindex="1">
                    </div>

                    
                    <div class="mb-3">
                        <label for="user" class="form-label">Rut</label>
                        <input class="form-control" type="text" value="<%=user.Rut%>" id="rut" name="rut" tabindex="1">
                    </div>

                    
                    <div class="mb-3">
                        <label for="user" class="form-label">Telefono</label>
                        <input class="form-control" type="text" value="<%=user.Phone%>" id="phone" name="phone" tabindex="1">
                    </div>

                      <div class="mb-3">
                          <label for="user" class="form-label">Rol</label>
                          <select class="form-select" id="userlevelid" name="userlevelid" aria-label="Defaul selext example">
                            <option <%= user.UserLevelId=='1' ? "selected" : ""%> value="1" >Administrador</option>
                            <option <%= user.UserLevelId=='2' ? "selected" : ""%> value="2" >Usuario</option>
                        </select>
                      </div>

                      <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                      <a href="/" class="btn btn-secondary">Cancelar</a>
                      
                  </form>
              </div>
          </div>
      </div>
    </div>
   <% } %>
   
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>